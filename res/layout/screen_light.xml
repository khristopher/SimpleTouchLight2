<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/screenLayout"

        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1" android:background="#52504a">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Touch To On"
            android:textSize="30dp"
            android:background="@android:color/transparent"
            android:id="@+id/toogle" android:layout_gravity="center_horizontal" android:layout_weight="0.99"
            android:textColor="#46c13c"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Back"
            android:background="@drawable/round_conor_button"
            android:id="@+id/back" android:layout_gravity="center_horizontal" android:textColor="#46c13c"/>
    <com.mopub.mobileads.MoPubView
            android:id="@+id/adview"
            android:layout_width="fill_parent"
            android:layout_gravity="bottom"
            android:layout_height="74dp"
            />
</LinearLayout>